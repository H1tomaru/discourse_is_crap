<div class='shinbakaz'>
	<div class='atzav'>
		{{#if model.fbB}}
			<img src='https://i.imgur.com/ZcxqN8c.png'>
		{{else}}
			{{#if model.fbG}}
				<img src='https://i.imgur.com/rmydNkF.png'>
			{{else}}
				<img src='https://i.imgur.com/OMygNKW.png'>
			{{/if}}
		{{/if}}
		<br>
		<span style='color: #27ae60'>{{model.fbG}}</span> / <span style='color: gray'>{{model.fbN}}</span> / <span style='color: lightcoral'>{{model.fbB}}</span>
		{{#if model.MENOSHO}}
			<br>
			<button {{action 'addOtziv'}}>Оставить отзыв</button>
		{{/if}}
	</div>

	<hr>

	<table>
		{{#each model.FEEDBACKS as |feedback|}}
			<tr>
				<td><div class='malabela2 {{feedback.COLOR}}'>+{{feedback.SCORE}}</div></td>
				<td>{{feedback.FEEDBACK}}</td>
				<td><a href='/u/{{feedback.pNAME}}'>{{feedback.pNAME}}</a></td>
				<td>{{feedback.DATE}}</td>
			</tr>
		{{/each}}
	</table>

	<ul class="pagination">
		{{#each pages as |page|}}
			<li><button {{action 'PageChange' page}}>{{page}}</button></li>
		{{/each}}
	</ul>
	{{#if bagamdal}}
		<div class="etomudal">

			{{#if mdalready}}

				<button class="netmudal" {{action 'netmudal'}}></button>

				{{#if otzivmdal}}
					<div class="mudalcontent mudaladdon headin3">
						<form {{ action "OtzivZaips" on="submit"}}>
							<input type="checkbox" disabled="disabled" checked={{checked1}}/> <button style='color: #27ae60' {{action 'selectOtz' 1}}>Позитивно</button>
							<input type="checkbox" disabled="disabled" checked={{checked2}}/> <button style='color: gray' {{action 'selectOtz' 2}}>Нейтрально</button>
							<input type="checkbox" disabled="disabled" checked={{checked3}}/> <button style='color: lightcoral' {{action 'selectOtz' 3}}>Отрицательно</button><br>
							{{#if otzivsmall}}отзыв слишком короткий!<br>{{/if}}
							<button type="submit">Добавить отзыв</button><br>
							{{input minlength="20" maxlength="200" class="otzivtext" type="text" value=otziv}}<br>
							{{checked1}}<br>
							{{checked2}}<br>
							{{checked3}}<br>
							{{score}}<br>
						</form>
					</div>
				{{/if}}

				{{#if otziv.winrars}}
					<div class="mudalcontent mudaladdon headin3">
						<span>Отзыв</span>
						<span>Успешно записан!</span>
					</div>
				{{/if}}

				{{#if otziv.fail}}
					<div class="mudalcontent headin3 prezaips">
						<div class="bagato">
							<div class="bagapi" style="background-image:url('https://i.imgur.com/33FJekg.png')">Epic Fail Is Epic</div>
						</div>
					</div>
				{{/if}}

			{{else}}

				<div class="bagaspin"></div>

			{{/if}}

		</div>
	{{/if}}
</div>

